{
  "name": "uteach-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "UTeach - AI-Powered Teaching Assistant (Monorepo)",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python3 main_simple.py",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip3 install -r requirements.txt",
    "start:frontend": "cd frontend && npm run preview",
    "start:backend": "cd backend && python3 main_simple.py"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}